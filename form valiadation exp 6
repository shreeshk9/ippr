      <label for="data_analyst">DATA ANALYST</label><br>
    </div>
    <div class="h">
      <button type="button" onclick="validateForm()">SUBMIT FORM</button>
      <button type="button" onclick="resetForm()">RESET</button>
    </div>
  </form>
  <script src="form.js"></script>
